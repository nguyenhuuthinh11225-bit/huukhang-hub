-- ðŸŒŸ huukhang-hub FPS Boost + Lag Fix All Game

local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local Lighting = game:GetService("Lighting")
local player = Players.LocalPlayer

-- Táº¡o GUI hiá»ƒn thá»‹ FPS + Ping + TÃªn
local gui = Instance.new("ScreenGui")
gui.Name = "huukhangHubGui"
gui.Parent = player:WaitForChild("PlayerGui")
gui.ResetOnSpawn = false

local infoLabel = Instance.new("TextLabel")
infoLabel.Parent = gui
infoLabel.BackgroundTransparency = 1
infoLabel.Position = UDim2.new(1, -200, 0, 10) -- GÃ³c trÃªn bÃªn pháº£i
infoLabel.Size = UDim2.new(0, 190, 0, 40)
infoLabel.Font = Enum.Font.SourceSansBold
infoLabel.TextSize = 18
infoLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
infoLabel.TextStrokeTransparency = 0
infoLabel.TextXAlignment = Enum.TextXAlignment.Right
infoLabel.TextYAlignment = Enum.TextYAlignment.Top

-- ðŸ”¹ XÃ³a hiá»‡u á»©ng rÃ¡c
for _, v in pairs(game:GetDescendants()) do
    if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Explosion") or v:IsA("Beam") then
        v.Enabled = false
    elseif v:IsA("Texture") or v:IsA("Decal") then
        v.Transparency = 1
    elseif v:IsA("SurfaceGui") or v:IsA("BillboardGui") then
        v.Enabled = false
    elseif v:IsA("Light") then
        v.Enabled = false
    end
end

-- ðŸ”¹ XÃ³a háº¿t váº­t thá»ƒ quÃ¡ chi tiáº¿t, cá»±c low
for _, v in pairs(workspace:GetDescendants()) do
    if v:IsA("Part") or v:IsA("MeshPart") or v:IsA("UnionOperation") then
        v.Material = Enum.Material.Plastic
        v.Color = Color3.fromRGB(255,255,255)
        v.Reflectance = 0
        v.CastShadow = false
    end
end

-- ðŸ”¹ Giáº£m Ä‘á»“ há»a cá»±c tháº¥p
Lighting.GlobalShadows = false
Lighting.Brightness = 1
Lighting.FogEnd = 1e9
Lighting.OutdoorAmbient = Color3.fromRGB(255,255,255)
Lighting.ClockTime = 12
Lighting.Ambient = Color3.fromRGB(255,255,255)

pcall(function()
    settings().Rendering.QualityLevel = "Level01"
    settings().Rendering.TerrainDecoration = false
end)

-- ðŸ”¹ Táº¯t háº¿t hiá»‡u á»©ng nÆ°á»›c, bloom, blur, DOF
pcall(function()
    Lighting.Blur.Enabled = false
    Lighting.Bloom.Enabled = false
    Lighting.ColorCorrection.Enabled = false
    Lighting.DepthOfField.Enabled = false
    Lighting.FogColor = Color3.fromRGB(255,255,255)
end)

-- ðŸŒ Hiá»ƒn thá»‹ FPS + Ping + TÃªn
local lastTime = tick()
local fps = 0
local frameCount = 0

RunService.RenderStepped:Connect(function()
    frameCount = frameCount + 1
    if tick() - lastTime >= 1 then
        fps = frameCount / (tick() - lastTime)
        frameCount = 0
        lastTime = tick()
        local ping = math.floor(player:GetNetworkPing() * 1000)
        infoLabel.Text = "huukhang-hub\nFPS: "..math.floor(fps).."\nPing: "..ping.." ms"
    end
end)

print("ðŸŽ® huukhang-hub Ultra Low Graphics + FPS Boost cháº¡y All Game!")
